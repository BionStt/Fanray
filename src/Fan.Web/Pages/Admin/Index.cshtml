            <!-- Buttons -->
            <button class="mdc-button mdc-button--raised" disabled>
                1 - 50 of 100
            </button>
            <button class="mdc-button">
                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">keyboard_arrow_left</i>
            </button>
            <button class="mdc-button">
                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">keyboard_arrow_right</i>
            </button>
        </section>
    </div>
</header>
