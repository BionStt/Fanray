{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "target": "es2015"
  },
  "include": [
    "ts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}