@model BlogPostViewModel
@{ 
    var post = Model;
}
<div class="post-info clearfix">
    <i class="fa fa-user" aria-hidden="true"></i><span class="post-author">@post.Author</span>
    <i class="fa fa-calendar" aria-hidden="true"></i><span class="post-date">@post.CreatedOnFriendly</span>
    <i class="fa fa-folder" aria-hidden="true"></i><span class="post-category"><a href="@post.Category.RelativeLink">@post.Category.Title</a></span>
@if (post.ShowDisqus)
{
    <i class="fa fa-comment" aria-hidden="true"></i><span class="post-author"><a href="@post.RelativeLink#disqus_thread" data-disqus-identifier="@post.DisqusPageIdentifier"></a></span>
}
    <i class="fa fa-share" aria-hidden="true"></i>
    <span id="social-list">
        <a href="@post.TwitterShareLink" title="Share on Twitter" target="_blank" class="twtr-share"><i class="fa fa-twitter"></i></a>
        <a href="@post.FacebookShareLink" title="Share on Facebook" target="_blank" class="fb-share"><i class="fa fa-facebook"></i></a>
        <a href="@post.GoogleShareLink" title="Share on Google+" target="_blank" class="goog-share"><i class="fa fa-google-plus"></i></a>
        <a href="@post.LinkedInShareLink" title="Share on LinkedIn" target="_blank" class="lnkd-share"><i class="fa fa-linkedin"></i></a>
    </span>
@if (post.Tags.Count > 0)
{
    <div>
        <i class="fa fa-tags" aria-hidden="true"></i>
        <span class="post-tags">
            @for (int i = 0; i < post.Tags.Count; i++)
            {
                var tag = post.Tags[i];
                <a href="@tag.RelativeLink">@tag.Title</a>if (i < post.Tags.Count-1){<text>,</text>}
            }
        </span>
    </div>
}
</div>
